<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tictactoe.kharkov.itstep.org.tictactoe">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.MenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.GameActivity" />
        <activity
            android:name=".ui.AboutActivity"
            android:label="@string/about"></activity>
        <activity
            android:name=".ui.HighscoreActivity"
            android:label="@string/records"></activity>
        <activity android:name=".ui.AuthActivity"></activity>
    </application>

</manifest>